{% if editEvent %}
    {% set data = event %}
{% endif %}

<div class="field-wrapper">
    <div class="field-block field-block_date">
        <div class="field-block__label">Дата</div>
        <input type="text" autocomplete="off" name="newevent_date" class="field-block__input js-newevent-date" id="datepicker" value="{{ data.dateStart|date('d M\, Y')|ru }}">
        <div class="field-block__calendar js-calendar-container"></div>
    </div>
    <div class="field-block field-block_start">
        <div class="field-block__label">Начало</div>
        <input type="text" name="newevent_start" class="field-block__input js-newevent-time-start" value="{% if from == 'schedule' or editEvent %}{{ data.dateStart|date_modify('-3 hour')|date('H:i') }}{% else %}08:00{% endif %}" required pattern="^(([0,1][0-9])|(2[0-3])):[0-5][0-9]$" data-validation-text="Не правильный формат времени">
    </div>
    <span class="field-block__tire">&#8212;</span>
    <div class="field-block field-block_end">
        <div class="field-block__label">Конец</div>
        <input type="text" name="newevent_end" class="field-block__input js-newevent-time-end" value="{% if from == 'schedule' or editEvent %}{{ data.dateEnd|date_modify('-3 hour')|date('H:i') }}{% else %}23:00{% endif %}" required pattern="^(([0,1][0-9])|(2[0-3])):[0-5][0-9]$" data-validation-text="Не правильный формат времени">
    </div>
</div>